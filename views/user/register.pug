extends ../layout

block content
  h1 Register
    hr
    form(action="/users/register", method="post")
        div.form-group
            label(for="name") Enter Name
            input#name(type="text", class="form-control",name="name")
        div.form-group
            label(for="email") Enter Email
            input#email(type="email", class="form-control",name="email")
        div.form-group
            label(for="price") Enter Password
            input#price(type="pass", class="form-control",name="pass")
        input(type="submit",class="btn btn-info")
  