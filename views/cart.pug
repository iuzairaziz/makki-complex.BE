extends layout

block content
  h1 Your Cart
  table.table
    - total = 0;
    thead
        th Name
        th Price
       
    tbody
        each item in cart
            - total += Number(item.price);
            tr
                td=item.name
                td=item.price
                td
                    a(href="/products/cart/delete/"+item._id,class="btn btn-danger") Remove
    tfoot
        tr
            td Total
            td=total
  
